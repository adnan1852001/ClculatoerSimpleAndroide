<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvfnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/enter_the_first_number"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/firstnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:inputType="numberDecimal"
        android:hint="enter_the_first_number"
        android:textColorHint="@color/blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/enter_the_second_number"
        android:textColor="@color/black"
        android:textSize="18sp"

        />

    <EditText
        android:id="@+id/socondnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:inputType="numberDecimal"

        android:hint="@string/enter_the_second_number"
        android:textColorHint="@color/blue" />

    <Button
        android:id="@+id/btnplu"
        android:layout_width="@dimen/aa"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="32dp"
        android:text="plural{+}"
        android:textColor="#E11B1B" />

    <Button
        android:id="@+id/ptnsub"
        android:layout_width="@dimen/aa"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="32dp"
        android:text="Sub{-}"
        android:textColor="#E11B1B" />

    <Button
        android:id="@+id/ptnmult"
        android:layout_width="@dimen/aa"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="32dp"
        android:text="mult{*}"
        android:textColor="#E11B1B" />
     </LinearLayout>